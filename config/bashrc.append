# Prompt avec nom d'utilisateur, hostname et répertoire courant en couleur
PS1='\[\e[1;32m\]\u@\h\[\e[1;34m\] \W\[\e[0m\]$ '
alias ll='ls -la --color=auto'
alias grep='grep --color=auto'
alias gs='git status'
alias ga='git add .'
alias gc='git commit -m'
alias gp='git push'
alias update='sudo apt update && sudo apt upgrade -y' # Mise à jour rapide du système
alias www='cd /var/www/html'  # Accès rapide au serveur web
